// mixins


code()
	background rgba(255,255,255,.8) !important
	font 12px Menlo, Monaco, Consolas, "Courier New" !important


// reset


*
	border 0
	margin 0
	padding 0


// general


body
	background #eee
	font 13px "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif

code
pre
	code()
	padding 2px 4px

h1
h2
	padding 0 0 0 20px

h1
	font-size 72px

	sub
		font normal 36px Garamond, "Times New Roman", Times, Georgia, serif
		position relative
		top -10px

h2
	font-size 16px
	font-weight normal

pre

	code
		background 0
		padding 0

// classes


.github-banner

	img
		position absolute
		right 0
		top 0
		height 149px
		width 149px

.gist .gist-file
	border 0 !important

	.gist-data
		code()

	.gist-meta
		opacity .5

	.line-numbers
		display none

// elements

#description
#samples
	box-sizing border-box
	float left
	padding-right 20px
	width 50%

#description
	color #666

#spec
	border-left 1px solid #ddd
	box-sizing border-box
	float right
	padding-left 20px
	width 50%

	h3
		font-size 24px

	h3
	h4
	th
		color #666

	h4
		font-style italic

	h4
	pre
		margin 1em 0

	table
		border-collapse collapse
		text-align left

		pre
			margin 0

	td
	th
		border-bottom 1px solid #ddd
		padding 5px 10px 5px 0

#samples
	border-top 1px solid #ddd
	margin-top 20px
	padding 10px 20px

	h3
	h4
	pre
	.gist-file
		margin 10px 0 0 0